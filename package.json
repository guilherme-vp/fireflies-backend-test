{
	"name": "fireflies-backend-test",
	"version": "1.0.0",
	"main": "dist/server.js",
	"type": "module",
	"engines": {
		"node": "^22"
	},
	"scripts": {
		"dev": "tsx watch --env-file=.env src/server.ts",
		"prebuild": "npm run clean",
		"build": "tsc",
		"start": "node --import=tsx dist/server.js",
		"clean": "rm -rf dist",
		"seed": "tsx src/scripts/database-seed.script.ts",
		"generate:jwt": "tsx src/scripts/generate-jwt.script.ts",
		"format": "biome format",
		"format:fix": "npm run format --write .",
		"lint": "biome lint",
		"lint:fix": "npm run lint --write .",
		"docker:up": "docker compose --env-file ./.env.docker up -d",
		"docker:down": "docker compose down",
		"commitlint": "commitlint --edit",
		"prepare": "husky",
		"test:unit:watch": "npm run test:unit --watch",
		"test:unit": "jest --config jest.config.unit.ts",
		"test:integration:watch": "npm run test:integration --watch",
		"test:integration": "jest --config jest.config.integration.ts --maxWorkers 4",
		"typecheck": "tsc --noEmit"
	},
	"keywords": [],
	"author": "Guilherme Paiva",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"compression": "^1.7.5",
		"dotenv": "^16.4.5",
		"express": "^5.0.1",
		"express-rate-limit": "^7.4.1",
		"helmet": "^8.0.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.7.1",
		"morgan": "^1.10.0",
		"openai": "^4.71.1",
		"winston": "^3.16.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@commitlint/format": "^19.5.0",
		"@commitlint/types": "^19.5.0",
		"@types/compression": "^1.7.5",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/mongoose": "^5.11.97",
		"@types/morgan": "^1.9.9",
		"@types/node": "^22.7.5",
		"@types/supertest": "^6.0.2",
		"husky": "^9.1.6",
		"jest": "^29.7.0",
		"mongodb-memory-server": "^10.1.2",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.1",
		"typescript": "^5.6.3"
	}
}